---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-700">
		<div id="app" class="grid grid-rows-4 grid-cols-5 h-screen p-2 gap-2">
			<aside
				class="bg-aside p-4 rounded-lg col-span-1 row-span-4 overflow-y-auto"
			>
				ASIDE
			</aside>

			<main
				class="bg-main p-4 rounded-lg col-span-4 row-span-3 overflow-y-auto"
			>
				<slot />
			</main>

			<footer class="bg-footer p-4 rounded-lg col-span-4 row-span-1">
				FOOTER
			</footer>
		</div>
	</body>
</html>

<style>
	html {
		font-family: Verdana, Geneva, Tahoma, sans-serif;
		font-weight: bold;
		background: #f3f4f6; /* Gris claro para un fondo limpio */
		color: #333; /* Texto oscuro sobre fondo claro */
	}

	/* #app {
		display: grid;
		grid-template-areas:
			"aside asaid asaid"
			"main main main"
			"footer footer footer";
		grid-template-rows: 20% auto 10%;
	} */

	.bg-main {
		background-color: #ffffff; /* Fondo blanco para el área principal */
	}

	.bg-aside {
		background-color: #48bb78; /* Verde para el área del aside */
	}

	.bg-footer {
		background-color: #616161; /* Gris claro para el área del footer */
	}
</style>
